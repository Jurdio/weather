<%- include('includes/head.ejs') %>
<style>
    .flip-card .card-body {
   
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.3), 0 12px 30px 0 rgba(0,0,0,0.25); /* Apply shadow to card-body */
        transition: box-shadow 0.3s ease-in-out;
        margin: 10px; /* Add some margin to ensure the shadow is visible */
        position: relative; /* Needed for the shadow effect */
        z-index: 1; /* Ensure the shadow is above any background elements */
    }
    .flip-card:hover .card-body {
        box-shadow: 0 12px 24px 0 rgba(0,0,0,0.4), 0 18px 48px 0 rgba(0,0,0,0.35); /* More pronounced shadow on hover */
    }
    /* Adjustments to ensure the flip effect works with the new styling */
    .flip-card-inner {
        transition: transform 0.6s;
        transform-style: preserve-3d;
        position: relative;
        height: 100%;
        width: 100%;
    }
    .flip-card.is-flipped .flip-card-inner {
        transform: rotateY(180deg);
    }
    .flip-card-front, .flip-card-back {
        backface-visibility: hidden;
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
    }
    .flip-card-back {
        transform: rotateY(180deg);
    }
</style>
</head>
<body>
    <%- include('includes/navbar.ejs') %>
    <div class="container mt-5">
        <div class="row">
            <% for(let i=0; i<5; i++) { %>
            <!-- Adjusted grid classes for better responsiveness -->
            <div class="col-12 col-md-6 col-lg"">
                <!-- Flip Card Container -->
                <div class="flip-card" tabindex="0">
                    <div class="flip-card-inner">
                        <!-- Front of the Card -->
                        <div class="flip-card-front">
                            <img src="path/to/image-<%= i+1 %>.jpg" class="card-img-top" alt="Day <%= i+1 %> Weather">
                            <div class="card-body">
                                <h5 class="card-title">Day <%= i+1 %></h5>
                                <p class="card-text">Min/Max Temp...</p>
                            </div>
                        </div>
                        <!-- Back of the Card -->
                        <div class="flip-card-back">
                            <div class="card-body">
                                <h5 class="card-title">Detailed Weather for Day <%= i+1 %></h5>
                                <img src="path/to/image-<%= i+1 %>.jpg" class="img-fluid" alt="Weather">
                                <p>Temperature: ...</p>
                                <p>Humidity: ...</p>
                                <p>Wind: ...</p>
                                <!-- Add more details as needed -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var cards = document.querySelectorAll('.flip-card');
            // Ensure the first card is flipped open initially
            if (cards.length > 0) {
                cards[0].classList.add('is-flipped');
            }
            
            cards.forEach(function (card) {
                card.addEventListener('click', function () {
                    // If the clicked card is already flipped, do nothing
                    if (card.classList.contains('is-flipped')) {
                        return;
                    }
                    // Close all other cards
                    cards.forEach(function (otherCard) {
                        otherCard.classList.remove('is-flipped');
                    });
                    // Flip the clicked card
                    card.classList.add('is-flipped');
                });
            });
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>