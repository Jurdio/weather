<%- include('includes/head.ejs') %>
<style>
    .flip-card {
        perspective: 1000px;
        width: 300px; /* Приклад розміру картки */
        height: 200px; /* Приклад розміру картки */
        display: inline-block; /* Замість абсолютного позиціонування */
    }
    .flip-card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        text-align: center;
        transition: transform 0.6s;
        transform-style: preserve-3d;
    }
    .flip-card-front, .flip-card-back {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
    }
    .flip-card-front {
        
        z-index: 2;
    }
    .flip-card-back {
        
        transform: rotateY(180deg);
        z-index: 1;
    }
    .flip-card.is-flipped .flip-card-inner {
        transform: rotateY(180deg);
    }
    .flip-card.is-flipped .flip-card-front {
        z-index: 1;
    }
    .flip-card.is-flipped .flip-card-back {
        z-index: 2;
    }

</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
    <%- include('includes/navbar.ejs') %>
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <h2 class="text-center">Локація: Лондон <i class="fa fa-star" aria-hidden="true"></i></h2>
            </div>
        </div>
        <div class="row">
            <% for(let i=0; i<5; i++) { %>
                <div class="col-sm-6 col-md-6 col-lg mb-4">
                    <!-- Flip Card Container -->
             
                    <div class="flip-card">
                        <div class="flip-card-inner">
                            <div class="flip-card-front">
                                <img src="path/to/image-<%= i+1 %>.jpg" class="card-img-top" alt="Day <%= i+1 %> Weather">
                                <div class="card-body">
                                    <h5 class="card-title">Day <%= i+1 %></h5>
                                    <p class="card-text">Min/Max Temp...</p>
                                </div>
                            </div>
                            <!-- Back of the Card -->
                            <div class="flip-card-back">
                                <div class="card-body">
                                    <h5 class="card-title">Detailed Weather for Day <%= i+1 %></h5>
                                    <img src="path/to/image-<%= i+1 %>.jpg" class="img-fluid" alt="Weather">
                                    <p>Temperature: ...</p>
                                    <p>Humidity: ...</p>
                                    <p>Wind: ...</p>
                                </div>
                            </div>
                        </div>
               
                </div>
                </div>
            <% } %>
        </div>
    </div>
    <script>
    document.addEventListener('DOMContentLoaded', function () {
        var cards = document.querySelectorAll('.flip-card');
        cards.forEach(function (card) {
            card.addEventListener('click', function () {
                card.classList.toggle('is-flipped');
            });
        });
    });
    </script>
    
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>