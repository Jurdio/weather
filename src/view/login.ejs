<%- include('includes/head.ejs') %>
</head>
<body>
    <%- include('includes/navbar.ejs') %>
    <div class="container d-flex justify-content-center align-items-center mt-5">
        <div class="card rounded p-4" style="width: 500px; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);">
            <h2 class="text-center">Login</h2>
            <% if (errorMessage) { %>
                <div class="alert alert-danger" role="alert">
                    <%= errorMessage %>
                </div>
            <% } %>
            <form action="/login" method="post">
                <div class="form-group">
                    <label for="email"><i class="fas fa-user"></i> Email:</label>
                    <input type="text" class="form-control" id="email" placeholder="Enter username" name="email"  value="<%= oldInput.email %>" required>
                </div>
                <div class="form-group">
                    <label for="pwd"><i class="fas fa-lock"></i> Password:</label>
                    <input type="password" class="form-control" id="pwd" placeholder="Enter password"  name="password"  value="<%= oldInput.password %>" required>
                </div>
                <button type="submit" class="btn btn-block" style="background-color: #EB6E4B; color: white;">Submit</button>
            </form>
            <div class="mt-3">
                <span>Forgot password? <a href="/reset">Reset</a></span>
            </div>
            <div>
                <span>Have not an account? <a href="/sign-up">Sign Up</a></span>
            </div>
            
        </div>
    </div>
</body>
</html>